<div class="col l4 s12">
  <div class="card">
    <div class="card-image waves-effect waves-block waves-light">
      <%= image_tag campaign.photo.url(:thumb) %>
    </div>
    <div class="card-content">
      <span class="card-title activator grey-text text-darken-4"><%= link_to campaign.title, campaign %> <i class="mdi-navigation-more-vert right"></i></span>
      <p><a href="#">Campaign Goal: <%= campaign.goal %></a></p>
    </div>
    <div class="card-reveal">
      <span class="card-title grey-text text-darken-4"><%= link_to campaign.title, campaign %> <i class="mdi-navigation-close right"></i></span>
      <p><%= campaign.story %></p>
    </div>
  </div>
</div>